<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateStation">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="355dp"
        android:layout_height="67dp"
        android:text="UPDATE INFORMATION"
        android:textColor="#3F51B5"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="349dp"
        android:layout_height="584dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/editTextTextPersonName6u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/et_round"
            android:ems="10"

            android:hint="ENTER STATION NAME"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <EditText
            android:id="@+id/editTextTextPersonName8u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/et_round"
            android:ems="10"

            android:hint="ENTER STATION LOCATION"
            android:inputType="textPersonName"
            android:padding="5dp" />


        <EditText
            android:id="@+id/editTextTextPersonName11u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/et_round"
            android:ems="10"
            android:hint="ENTER PETROL ARRIVAL TIME"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <EditText
            android:id="@+id/editTextTextPersonName12u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/et_round"
            android:ems="10"
            android:hint="ENTER DIESEL ARRIVAL TIME"
            android:inputType="textPersonName"

            android:padding="5dp" />

        <EditText
            android:id="@+id/editTextTextPersonName13u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="30dp"
            android:background="@drawable/et_round"
            android:ems="10"
            android:hint="ENTER PETROL LITERS"
            android:inputType="number"
            android:padding="5dp" />

        <EditText
            android:id="@+id/editTextTextPersonName14u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"

            android:background="@drawable/et_round"
            android:ems="10"
            android:hint="ENTER DIESEL LITERS"
            android:inputType="number"
            android:padding="5dp" />

        <EditText
            android:id="@+id/pf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/et_round"
            android:ems="10"
            android:hint="ENTER PETROL FINISH TIME"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <EditText
            android:id="@+id/df"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/et_round"
            android:ems="10"
            android:hint="ENTER DIESEL FINISH TIME"
            android:inputType="textPersonName"

            android:padding="5dp" />

        <Button
            android:id="@+id/button6u"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Update"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>